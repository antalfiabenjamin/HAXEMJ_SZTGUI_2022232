<Window x:Class="HAXEMJ_SZTGUI2022232.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HAXEMJ_SZTGUI2022232.WpfClient"
        xmlns:vms="clr-namespace:HAXEMJ_SZTGUI2022232.WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="Device Manager Client" Height="450" Width="800">
    <Window.DataContext>
        <vms:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Phones}" SelectedItem="{Binding SelectedPhone}" Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label Content="{Binding PhoneId}"/>
                        <Label Content="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1">
            <StackPanel Grid.Column="1">
                <TextBox Text="{Binding SelectedPhone.Name}"  Padding="10" Margin="5"/>
            </StackPanel>
            <StackPanel Grid.Column="1" VerticalAlignment="Stretch">
                <Button Content="Create" Padding="5" Margin="5" Width="200" Command="{Binding CreatePhoneCommand}"/>
                <Button Content="Delete" Padding="5" Margin="5" Width="200" Command="{Binding DeletePhoneCommand}"/>
                <Button Content="Update" Padding="5" Margin="5" Width="200" Command="{Binding UpdatePhoneCommand}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Non Crud" Margin="5"/>
                <ComboBox x:Name="tableOptions" SelectedItem="{Binding SelectedTable}" Margin="5" SelectedIndex="0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
